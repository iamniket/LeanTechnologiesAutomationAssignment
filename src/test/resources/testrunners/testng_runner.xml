<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="SauceLabAutomation" thread-count="5"
	parallel="tests" verbose="4">

	<test name="Sauce Lab Login Page">
	<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.saucelab.tests.LoginPageTest" />
		</classes>
	</test>

	<test name="Sauce Lab Checkout Page">
	<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.saucelab.tests.CheckoutPageTest" />
		</classes>
	</test>

</suite>